generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Booking {
  id           String   @id @default(cuid())
  firstName    String
  lastName     String
  phone        String?
  email        String
  location     String
  eventDate    DateTime?
  duration     DateTime
  budget       String?
  eventType    String[]
  services     String[]  @default([])
  message      String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@map("bookings")
}

// add a new table for contact us with name, email, message, and createdAt fields
model ContactUs {
  id        String   @id @default(cuid())
  name      String
  phone     String?
  email     String
  message   String
  createdAt DateTime @default(now())
  @@map("contact_us")
}

// add a new table for contract with the following fields: id, name, email, location, eventDate, duration, budget, eventType, message, createdAt
model Contract {
  id          String   @id @default(cuid())
  fullName    String
  email       String
  location    String
  eventDate   DateTime?
  duration    DateTime
  total_fee   Float?
  hourly_rate Float?
  retainer_price Float?
  due_price Float?
  eventType   String[]
  services    String[]
  message     String
  createdAt   DateTime @default(now())
}    

model Invoice {
  id        String   @id @default(cuid())
  email     String
  eventType String
  amount    Decimal  @db.Decimal(10, 2)
  duration  String
  date      DateTime
  location  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("invoices")
}
